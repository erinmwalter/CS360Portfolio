<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F3F3F3"
    android:layout_height="match_parent">
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mainGrid"
        android:background="#000000"
        android:titleTextColor="@color/white"
        android:title="Inventory App">

    </Toolbar>
    <GridLayout
        android:id="@+id/mainGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:columnCount="1"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            android:clickable="true">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="3"
                >

                <com.google.android.material.imageview.ShapeableImageView
                    app:shape="Circular"
                    app:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight=".5"
                    android:src="@drawable/ic_launcher_background"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_rowWeight="1"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:text="First Item"
                    android:textSize="15dp"
                    android:textAppearance="bold"
                    android:textAlignment="center"
                    android:paddingVertical="50dp"
                    >
                </TextView>
                <TextView
                    android:layout_rowWeight="1"
                    android:layout_height="match_parent"
                    android:text="50pcs"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:paddingVertical="50dp"
                    android:layout_columnWeight="1"
                    >
                </TextView>

            </GridLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            android:clickable="true">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="3"
                >

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight=".5"
                    android:src="@drawable/ic_launcher_background"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_rowWeight="1"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:text="Second Item"
                    android:textSize="15dp"
                    android:textAppearance="bold"
                    android:textAlignment="center"
                    android:paddingVertical="50dp"
                    >
                </TextView>
                <TextView
                    android:layout_rowWeight="1"
                    android:layout_height="match_parent"
                    android:text="100pcs"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:paddingVertical="50dp"
                    android:layout_columnWeight="1"
                    >
                </TextView>

            </GridLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            android:clickable="true">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="3"
                >

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight=".5"
                    android:src="@drawable/ic_launcher_background"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_rowWeight="1"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:text="Third Item"
                    android:textSize="15dp"
                    android:textAppearance="bold"
                    android:textAlignment="center"
                    android:paddingVertical="50dp"
                    >
                </TextView>
                <TextView
                    android:layout_rowWeight="1"
                    android:layout_height="match_parent"
                    android:text="15pcs"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:paddingVertical="50dp"
                    android:layout_columnWeight="1"
                    >
                </TextView>

            </GridLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            android:clickable="true">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="3"
                >

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight=".5"
                    android:src="@drawable/ic_launcher_background"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_rowWeight="1"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:text="Fourth Item"
                    android:textSize="15dp"
                    android:textAppearance="bold"
                    android:textAlignment="center"
                    android:paddingVertical="50dp"
                    >
                </TextView>
                <TextView
                    android:layout_rowWeight="1"
                    android:layout_height="match_parent"
                    android:text="25pcs"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:paddingVertical="50dp"
                    android:layout_columnWeight="1"
                    >
                </TextView>

            </GridLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            android:clickable="true">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="3"
                >

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight=".5"
                    android:src="@drawable/ic_launcher_background"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_rowWeight="1"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:text="Fifth Item"
                    android:textSize="15dp"
                    android:textAppearance="bold"
                    android:textAlignment="center"
                    android:paddingVertical="50dp"
                    >
                </TextView>
                <TextView
                    android:layout_rowWeight="1"
                    android:layout_height="match_parent"
                    android:text="150pcs"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:paddingVertical="50dp"
                    android:layout_columnWeight="1"
                    >
                </TextView>


            </GridLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/mainGrid"
        app:layout_constraintBottom_toBottomOf="@+id/mainGrid"
        app:srcCompat="@android:drawable/ic_input_add"
        android:clickable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>